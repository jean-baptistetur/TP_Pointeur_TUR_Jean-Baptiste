#include <stdio.h>

typedef struct {
    const char* name;
} Menu;

typedef struct {
    const char* title;
    Menu* menus;
    int menuCount;
} Application;

void displayMenu(const Application* app) {
    printf("--- %s ---\n", app->title);
    for (int i = 0; i < app->menuCount; ++i) {
        printf("%d. %s\n", i + 1, app->menus[i].name);
    }
    printf("Choisissez une option (0 pour quitter) : ");
}

void runApplication(const Application* app) {
    int choice;
    do {
        displayMenu(app);
        scanf_s("%d", &choice);
        if (choice > 0 && choice <= app->menuCount) {
            printf("Vous avez selectionne : %s\n\n\n", app->menus[choice - 1].name);
        }
        else if (choice != 0) {
            printf("Option invalide.\n\n\n");
        }
    } while (choice != 0);
}

int main() {
    Menu photoMenus[] = {
        {"Regarder une photo"},
        {"Prendre une photo"}
    };

    Application photoApp = { "Photos", photoMenus, 2 };

    runApplication(&photoApp);

    return 0;
}
